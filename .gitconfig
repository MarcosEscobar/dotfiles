[user]
  email = hexagram.me@gmail.com
  name = Marcos J. Escobar
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  po = push origin
  aa = add --all
  l = log --oneline --graph --decorate
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
  default = simple
